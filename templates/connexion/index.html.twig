{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="connexion">
        <h2>Connexion</h2>
        <h3>    </h3>

        <form action="{{ path('app_connexion') }}" method="post">
            <div class="username">
                <input type="text" placeholder="Email"  id="username" name="_username" value="{{ last_username }}">
                <span class="material-symbols-outlined"> mail </span>
            </div>

            <div class="password">
                <input type="password" id="password" name="_password" placeholder="Mot de passe" >
                <span class="material-symbols-outlined"> key </span>
            </div>

            <button type="submit">Connexion</button>

        </form>
    </div>

    <style>
        @keyframes rotate {
            100% {
                background-position: 15% 50%;
            }
        }
        body {
            background-image: url({{ asset('images/waves.svg')}});
            background-size: 130rem;
            background-repeat: no-repeat;
            animation: rotate 6s infinite alternate linear;
        }
        .connexion {
            position: relative;
            margin : auto;
            margin-top: 10%;
            margin-bottom: 5%;
            z-index: 3;
            padding: 38px 30px 44px;
            border-radius: 22px;
            background: #161616;
            text-align: center;
            width: 380px;
        }

        .connexion > h2 {
            color: rgba(255, 255, 255, 0.38);
            font-size: 36px;
            font-weight: 500;
            margin: 0 0 4px;
        }

        .connexion > h3 {
            color: rgba(255, 255, 255, 0.38);
            margin: 0 0 30px;
            font-weight: 500;
            font-size: 16px;
        }

        form {
            display: grid;
            gap: 16px;
            place-items: center;
            width: 100%;
            margin: 0;
        }

        .username, .password {
            color: rgba(255, 255, 255, 0.38);
            width: 100%;
            position: relative;
        }

        span {
            position: absolute;
            top: 50%;
            left: 16px;
            translate: 0 -50%;
            color: rgba(255, 255, 255, 0.38);
        }

        form input,
        form button {
            width: 100%;
            height: 60px;
            outline: none;
            padding: 0;
            font-family: inherit;
            font-size: 16px;
            border-radius: 8px;
        }

        form input {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.1);
            font-size: 18px;
            padding: 0 20px 0 50px;
            color: inherit;
        }

        form input:focus {
            border-color: #4b4c4d;
        }

        form input:focus ~ span {
            color: #8e44ad;
        }

        form button {
            cursor: pointer;
            background: rgba(255, 255, 255, 0.38);
            color: #f9f9f9;
            border: 0;
            font-weight: 600;
            letter-spacing: 2px;
        }

        footer {
            position:absolute;
        }
    </style>
{% endblock %}
